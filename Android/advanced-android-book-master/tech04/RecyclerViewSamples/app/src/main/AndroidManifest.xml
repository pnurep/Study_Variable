<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.advanced_android.recyclerviewsamples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".simple.RecyclerViewActivity"
            android:label="RecyclerViewActivity" />
        <activity
            android:name=".divider.DividerRecyclerViewActivity"
            android:label="DividerRecyclerViewActivity" />
        <activity
            android:name=".cardview.CardViewRecyclerViewActivity"
            android:label="CardViewRecyclerViewActivity" />
        <activity
            android:name=".grid.GridRecyclerViewActivity"
            android:label="GridRecyclerViewActivity" />
        <activity
            android:name=".manipulation.ManipulationActivity"
            android:label="ManipulationActivity" />
    </application>

</manifest>
